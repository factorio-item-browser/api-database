<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="FactorioItemBrowser\Api\Database\Entity\ModCombination">
        <options>
            <option name="comment">The table holding the combinations of optional mods manipulating the data.</option>
        </options>

        <id name="id" type="integer">
            <generator />
            <options>
                <option name="unsigned">true</option>
                <option name="comment">The id of the mod combination.</option>
            </options>
        </id>

        <many-to-one field="mod" target-entity="Mod" inversed-by="combinations">
            <join-column name="modId" />
        </many-to-one>

        <field name="name">
            <options>
                <option name="comment">The name of the mod combination.</option>
            </options>
        </field>

        <field name="optionalModIds" type="json">
            <options>
                <option name="comment">The list of the ids of the loaded optional mods.</option>
            </options>
        </field>

        <field name="order" column="`order`" type="integer">
            <options>
                <option name="unsigned">true</option>
                <option name="comment">The order of the mod combination.</option>
            </options>
        </field>

        <many-to-many field="items" target-entity="Item" inversed-by="modCombinations">
            <join-table name="ModCombinationXItem">
                <join-columns>
                    <join-column name="modCombinationId" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="itemId" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="recipes" target-entity="Recipe" inversed-by="modCombinations">
            <join-table name="ModCombinationXRecipe">
                <join-columns>
                    <join-column name="modCombinationId" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="recipeId" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <many-to-many field="machines" target-entity="Machine" inversed-by="modCombinations">
            <join-table name="ModCombinationXMachine">
                <join-columns>
                    <join-column name="modCombinationId" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="machineId" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <one-to-many field="translations" target-entity="Translation" mapped-by="modCombination" />

        <one-to-many field="icons" target-entity="Icon" mapped-by="modCombination" />
    </entity>
</doctrine-mapping>
