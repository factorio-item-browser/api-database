<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="FactorioItemBrowser\Api\Database\Entity\IconFile">
        <options>
            <option name="comment">The table holding the actual file data of the icons.</option>
        </options>

        <id name="id" type="uuid_binary">
            <options>
                <option name="comment">The internal id of the icon file.</option>
            </options>
        </id>

        <field name="image" type="blob">
            <options>
                <option name="comment">The actual image.</option>
            </options>
        </field>

        <field name="size" type="smallint">
            <options>
                <option name="unsigned">true</option>
                <option name="comment">The size of the image.</option>
            </options>
        </field>

        <one-to-many field="icons" target-entity="Icon" mapped-by="file" />
    </entity>
</doctrine-mapping>
