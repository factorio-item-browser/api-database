<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                        https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <entity name="FactorioItemBrowser\Api\Database\Entity\Item">
        <options>
            <option name="comment">The table holding the items.</option>
        </options>

        <unique-constraints>
            <unique-constraint columns="type,name" />
        </unique-constraints>

        <id name="id" type="integer">
            <generator />
            <options>
                <option name="unsigned">true</option>
                <option name="comment">The internal id of the item.</option>
            </options>
        </id>

        <field name="type" column-definition="ENUM('item', 'fluid')">
            <options>
                <option name="comment">The type of the item.</option>
            </options>
        </field>

        <field name="name" length="255">
            <options>
                <option name="comment">The unique name of the item.</option>
            </options>
        </field>

        <many-to-many field="modCombinations" target-entity="ModCombinations" mapped-by="items" />
    </entity>
</doctrine-mapping>
